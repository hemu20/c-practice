#include<stdio.h>
#include<conio.h>
main()
{
int a[10],n,i,sum=0,sume=0,sumo=0;
clrscr();
printf("enter the number of variables to be used\n");
scanf("%d",&n);
for(i=0;i<n;i++)
{
printf("enter the value of a[%d] ",i);
scanf("%d",&a[i]);
sum=sum+a[i];
	if(a[i]%2==0)
	{
	sume=sume+a[i];
	}
	else
	{
	sumo=sumo+a[i];
	}
}
printf("sum of all values %d\n",sum);
printf("sum of even values %d\n",sume);
printf("sum of odd values %d\n",sumo);
}
